<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/day_rv_item_grid_shape"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/day_item_title"
        tools:text="开学已经"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/day_white"
        android:textSize="18sp"
        android:background="@color/day_origin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/day_item_num"
        android:layout_gravity="center"
        tools:text="83"
        android:textSize="54sp"
        android:textColor="@color/day_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/day_item_time"
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        tools:text="2018-12-28 星期五"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</FrameLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/day_widget_bg2"
    android:orientation="vertical"
    android:padding="5dp">

    <FrameLayout
        android:padding="4dp"
        android:background="@color/day_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/day_widget_text"
            android:text="考试周 - 全部"
            android:textSize="16sp"
            android:textColor="@color/day_white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/day_widget_left"
            android:layout_gravity="start|center"
            android:background="@drawable/day_ic_left"
            android:layout_width="28dp"
            android:layout_height="28dp" />
        <Button
            android:id="@+id/day_widget_right"
            android:layout_gravity="end|center"
            android:background="@drawable/day_ic_right"
            android:layout_width="28dp"
            android:layout_height="28dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/day_widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/day_widget_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </FrameLayout>

</LinearLayout>